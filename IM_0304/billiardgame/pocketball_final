import math

class BilliardGame:
    """ ğŸ± ë‹¹êµ¬ ì‹œë®¬ë ˆì´ì…˜: ë‚´ ê³µ(myball)ë¡œ ëª©ì êµ¬(target)ë¥¼ ë§ì¶”ëŠ” ì½”ë“œ """

    def __init__(self, myball_pos, target_pos, ball_radius=0.5):
        """
        ğŸ“Œ ì´ˆê¸°í™”
        :param myball_pos: ë‚´ ê³µ(íë³¼) ìœ„ì¹˜ (x, y)
        :param target_pos: ëª©í‘œ ê³µ(íƒ€ê²Ÿ) ìœ„ì¹˜ (x, y)
        :param ball_radius: ê³µì˜ ë°˜ì§€ë¦„ (ê¸°ë³¸ê°’ 0.5)
        """
        self.myball_pos = myball_pos
        self.target_pos = target_pos
        self.ball_radius = ball_radius  # ê³µì˜ í¬ê¸° ê³ ë ¤

    def calculate_distance(self):
        """
        ğŸ“ ë‚´ ê³µ(myball)ê³¼ ëª©í‘œ ê³µ(target) ì‚¬ì´ ê±°ë¦¬ ê³„ì‚° (í”¼íƒ€ê³ ë¼ìŠ¤ ì •ë¦¬ í™œìš©)
        :return: ìœ í´ë¦¬ë“œ ê±°ë¦¬
        """
        dx = self.target_pos[0] - self.myball_pos[0]
        dy = self.target_pos[1] - self.myball_pos[1]
        return math.sqrt(dx**2 + dy**2)

    def calculate_shot(self):
        """
        ğŸš€ ëª©ì êµ¬ë¥¼ ë§ì¶”ê¸° ìœ„í•´ í•„ìš”í•œ ê°ë„ì™€ íŒŒì›Œ ê³„ì‚°
        :return: (ìƒ· ê°ë„, íŒŒì›Œ)
        """
        dx = self.target_pos[0] - self.myball_pos[0]
        dy = self.target_pos[1] - self.myball_pos[1]

        # ğŸ”„ ì´ë™ ë°©í–¥(Î¸) ê³„ì‚° (ë¼ë””ì•ˆ â†’ ë„)
        shot_angle = math.degrees(math.atan2(dy, dx))

        # ğŸ“ ê±°ë¦¬ ê¸°ë°˜ íŒŒì›Œ ì„¤ì • (ê±°ë¦¬ ë¹„ë¡€, ìµœì†Œ 10, ìµœëŒ€ 100)
        distance = self.calculate_distance()
        power = min(max(distance * 5, 10), 100)

        return shot_angle % 360, power

    def play(self):
        """
        ğŸ¯ ê³µì„ ì¹˜ê³  ê²°ê³¼ ì¶œë ¥
        """
        shot_angle, power = self.calculate_shot()
        print(f"\nğŸš€ ê³µì„ {power:.2f}ì˜ í˜ìœ¼ë¡œ {shot_angle:.2f}Â° ë°©í–¥ìœ¼ë¡œ ì¹©ë‹ˆë‹¤!")

# ğŸ± ì˜ˆì œ ì‹¤í–‰
myball_pos = (1, 1)  # ë‚´ ê³µ ìœ„ì¹˜
target_pos = (8, 3)  # ëª©í‘œ ê³µ ìœ„ì¹˜

billiard_game = BilliardGame(myball_pos, target_pos)
billiard_game.play()
